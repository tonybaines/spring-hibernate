<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	
	default-autowire="constructor">

    <!-- N.B. The Spring IDE can't cope with autowire by constructor, so you'll see spurious warnings -->
    <bean id="car" class="masterclass.spring.autowiring.Car" />
    <bean id="chassis" class="masterclass.spring.autowiring.Chassis" />

    <!-- Remember, our car won't work with the same wheel attached four times ... -->

</beans>
